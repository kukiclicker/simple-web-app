@page
@model SimpleWebApplication.Pages.Clients.EditModel
@{
}
<div class="add-new-client">
    <br>
    <h2>Edit Client</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="POST">
        <intput type="hidden" name="id" value="@Model.c.id"></intput>
        <div class="row mb-3">

            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">Name</label>
                <input type="text" class="form-control" name="name" value="@Model.c.name" placeholder="Full name"></input>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">Email</label>
                <input type="text" class="form-control" name="email" value="@Model.c.email" placeholder="Email"></input>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">Phone number</label>
                <input type="text" class="form-control" name="phone" value="@Model.c.phone" placeholder="Phone number"></input>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">Address</label>
                <input type="text" class="form-control" name="address" value="@Model.c.address" placeholder="Address"></input>
            </div>
        </div>
        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3 mt-3">
            <div class="col-sm-3 d-grid">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-dark" href="/" role="button">Cancel</a>
            </div>
        </div>

    </form>
</div>